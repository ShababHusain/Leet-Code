class Solution {
    public int numTilings(int n) {
        int MOD=1_000_000_007;
        long[] dp =new long[n+2];
        dp[0]=1;
        dp[1]=1;
        dp[2]=2;

        for(int i=3; i<=n; i++){
            dp[i]=(dp[i-1]+dp[i-2])% MOD;
            for(int j=0; j<= i-3; j++){
                dp[i]=(dp[i]+2*dp[j])% MOD;

            }
        }
        return (int) dp[n];
    }
}
