class Solution {
    public long countInterestingSubarrays(List<Integer> nums, int modulo, int k) {
        Map<Integer, Integer> countMap = new HashMap<>();
        countMap.put(0, 1); // base case: empty prefix
        long result = 0;
        int prefix = 0;

        for (int num : nums) {
            if (num % modulo == k) {
                prefix = (prefix + 1) % modulo;
            }

            int target = (prefix - k + modulo) % modulo;
            result += countMap.getOrDefault(target, 0);
            countMap.put(prefix, countMap.getOrDefault(prefix, 0) + 1);
        }

        return result;
    }
}
