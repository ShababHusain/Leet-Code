class Solution {
    public int[] maxTargetNodes(int[][] edges1, int[][] edges2) {
        int n = edges1.length + 1;
        int m = edges2.length + 1;

        List<List<Integer>> tree1 = buildGraph(edges1, n);
        List<List<Integer>> tree2 = buildGraph(edges2, m);

        boolean[] parity1 = new boolean[n];
        boolean[] parity2 = new boolean[m];

        int even1 = dfs(tree1, 0, -1, parity1, true);
        int even2 = dfs(tree2, 0, -1, parity2, true);

        int odd1 = n - even1;
        int odd2 = m - even2;

        int[] result = new int[n];
        for (int i = 0; i < n; i++) {
            int tree1Count = parity1[i] ? even1 : odd1;
            int tree2Count = Math.max(even2, odd2);
            result[i] = tree1Count + tree2Count;
        }

        return result;
    }

    private List<List<Integer>> buildGraph(int[][] edges, int size) {
        List<List<Integer>> graph = new ArrayList<>();
        for (int i = 0; i < size; i++) graph.add(new ArrayList<>());
        for (int[] edge : edges) {
            graph.get(edge[0]).add(edge[1]);
            graph.get(edge[1]).add(edge[0]);
        }
        return graph;
    }

    private int dfs(List<List<Integer>> graph, int node, int parent, boolean[] parity, boolean isEven) {
        parity[node] = isEven;
        int count = isEven ? 1 : 0;
        for (int neighbor : graph.get(node)) {
            if (neighbor != parent) {
                count += dfs(graph, neighbor, node, parity, !isEven);
            }
        }
        return count;
    }
}
