class Solution {
    public int maxDifference(String s) {
        int[] freq = new int[26];
        for (char c : s.toCharArray()) {
            freq[c - 'a']++;
        }

        int maxOdd = 0;
        int maxDiff = Integer.MIN_VALUE;

        for (int i = 0; i < 26; i++) {
            if (freq[i] % 2 == 1) {
                maxOdd = Math.max(maxOdd, freq[i]);
            }
        }

        for (int i = 0; i < 26; i++) {
            if (freq[i] % 2 == 0 && freq[i] > 0) {
                maxDiff = Math.max(maxDiff, maxOdd - freq[i]);
            }
        }

        return maxDiff;
    }
}
