class Solution {
    public long minSum(int[] nums1, int[] nums2) {
        long sum1 = 0, sum2 = 0;
        boolean hasZero1 = false, hasZero2 = false;

        for (int x : nums1) {
            if (x == 0) {
                hasZero1 = true;
                sum1 += 1;
            } else {
                sum1 += x;
            }
        }

        for (int x : nums2) {
            if (x == 0) {
                hasZero2 = true;
                sum2 += 1;
            } else {
                sum2 += x;
            }
        }

        if (sum1 == sum2) return sum1;
        if (sum1 < sum2) return hasZero1 ? sum2 : -1;
        return hasZero2 ? sum1 : -1;
    }
}
